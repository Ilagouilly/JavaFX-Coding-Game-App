<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.ismaillagouilly.WelcomeController" 
           style="-fx-background-color: linear-gradient(to bottom, #f7f7f7, #e3e3e3);">

    <VBox spacing="20.0" alignment="CENTER">
        <VBox spacing="15.0" alignment="CENTER" 
              style="-fx-background-color: white; -fx-padding: 30px; -fx-background-radius: 15px; 
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5); 
                     -fx-min-width: 320px; -fx-max-width: 400px;">
                     
            <Label text="Welcome to the JavaFX Quiz App" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                   
            <Label text="Enter your details to start:" 
                   style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            
            <TextField fx:id="nameField" promptText="Enter your name" 
                       style="-fx-pref-width: 280px; -fx-font-size: 14px; -fx-padding: 8px;"/>
                       
            <TextField fx:id="emailField" promptText="Enter your email (optional)" 
                       style="-fx-pref-width: 280px; -fx-font-size: 14px; -fx-padding: 8px;"/>
            
            <TextField fx:id="questionCountField" promptText="Number of Questions" 
                       style="-fx-pref-width: 280px; -fx-font-size: 14px; -fx-padding: 8px;"/>
                       
            <ComboBox fx:id="difficultyComboBox" promptText="Select Difficulty" 
                       style="-fx-pref-width: 280px; -fx-font-size: 14px;"/>

            <Button text="Start Quiz" onAction="#startQuiz" 
                    style="-fx-background-color: #0078D7; -fx-text-fill: white; 
                           -fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 5px;"/>
        </VBox>
    </VBox>
    
    <padding>
        <Insets top="50.0" right="20.0" bottom="50.0" left="20.0"/>
    </padding>
</StackPane>
